<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.rahul.sudekosolver.Sudeko
        android:id="@+id/sudekoboard"
        android:layout_width="425dp"
        android:layout_height="409dp"
        custom:cellhighcolor="#ccff33"
        custom:fullcellcolor="#ecffb3"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="0.0"
        custom:sudekocolor="#000000"
        custom:lettercolor="@color/black"
        custom:lettercolorsolve="#00cc00"

        >


    </com.rahul.sudekosolver.Sudeko>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="@+id/sudekoboard"
        custom:layout_constraintHorizontal_bias="1.0"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/sudekoboard"

        custom:layout_constraintVertical_bias="0.11">


        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNonepress"
            android:text="@string/one"
            android:textColor="@color/black"
             android:textSize="10sp"

             />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNtwopress"
            android:text="@string/two"
            android:textColor="@color/black"
            android:textSize="10sp"

            />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNthreepress"
            android:text="@string/three"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNfourpress"
            android:text="@string/four"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNfivepress"
            android:text="@string/five"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNsixpress"
            android:text="@string/six"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNsevenpress"
            android:text="@string/seven"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNeightpress"
            android:text="@string/eight"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="BTNninepress"
            android:text="@string/nine"
            android:textColor="@color/black"

            />
    </LinearLayout>

    <Button
        android:id="@+id/solve_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="solve"
        android:text="solve"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/linearLayout"
        custom:layout_constraintVertical_bias="0.286" />


</androidx.constraintlayout.widget.ConstraintLayout>
